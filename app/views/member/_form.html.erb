<label for="FirstName">First Name</label>
<%= f.text_field :FirstName %><br/>

<label for="LastName">Last Name</label>
<%= f.text_field :LastName %><br/>

<br/>
<label for="Email">Email</label>
<%= f.text_field :Email %><br/>

<label for="email_invalid">Email address invalid?</label>
<%= f.check_box :email_invalid %><br/>
<br/>

<label for="Photo">Profile photo</label>
<%= file_field :Photo, :datafile %><br/>
<% if @member.Photo %>
	<% @profile_file = File.dirname(@member.Photo)+"/p"+File.basename(@member.Photo) %>
	<label></label>
	<img style="display:block;" src="<%=ApplicationController.new.newzats_members_url+"/uploads/"+@profile_file%>"/><br/>
<% end %>

<label for="website">Website</label>
<%= f.text_field :website %><br/>

<label for="bio">Bio</label>
<%= f.text_area :bio, :class => :wysihtml5, :rows => "10", :cols => "60" %><br/>

<label for="addr_1">Address line 1</label>
<%= f.text_field :addr_1 %><br/>

<label for="addr_2">Address line 2</label>
<%= f.text_field :addr_2 %><br/>

<label for="addr_3">Address line 3</label>
<%= f.text_field :addr_3 %><br/>

<label for="addr_4">Address line 4</label>
<%= f.text_field :addr_4 %><br/>

<label for="post_code">Post code</label>
<%= f.text_field :post_code %><br/>

<br/>
<label for="phone_work">Work phone</label>
<%= f.text_field :phone_work %><br/>

<label for="phone_home">Home phone</label>
<%= f.text_field :phone_home %><br/>

<label for="phone_mobile">Mobile phone</label>
<%= f.text_field :phone_mobile %><br/>

<label for="fax">Fax</label>
<%= f.text_field :fax %><br/>

<br/>
<label for="area">Area</label>
<%= collection_select :member, :area_id, @areas, :id, :name, options ={:include_blank => :true } %><br/>

<br/>
<label for="region">Region</label>
<%= collection_select :member, :region_id, @regions, :id, :name, options ={:include_blank => :true } %><br/>

<br/>
<label for="membershiptype">Membership type</label>
<%= collection_select :member, :membershiptype_id, @membershiptypes, :id, :name %><br/>

<br/>
<label for="groups">Groups</label>
<% for group in @groups %>
	<div id="select-group">
		<%= hidden_field_tag "member[group_ids][]", "" %>
		<%= check_box_tag "member[group_ids][]", 
			group.id, @member.groups.include?(group) %>
		<%= group.name %>
	</div>
<% end %>
