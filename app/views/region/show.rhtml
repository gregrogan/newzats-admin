<% content_for :title do %>
View region
<% end %> 
<h1><%= @region.name %></h1>
<% if @members.blank? %>
<p>No members currently in this region.</p>
<% else %>
  Members:<br/>
  <%= render "member/member_list", :locals => { :members => @members } %>
<% end %>
<br/>
<% if @members.blank? %>
<%= link_to :Delete, {:action => 'delete', :id => @region.id} -%>
<% else %>
Note: This region can only be deleted if associated members are removed
<% end %>
